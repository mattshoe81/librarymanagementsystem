@model LibraryWebUI.ViewModels.CreateAccountViewModel

@{
    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["StyleSheet"] = "create-account.css";
}

<h2>CreateAccount</h2>
<hr />
<div class="row">
	<div id="create-account-form-container">
		<form id="create-account-form" asp-action="CreateAccount" method="post">
			<div class="alert alert-danger">
				@Model.ErrorMessage.ToString()
			</div>
			<div asp-validation-summary="All"></div>
			<div class="form-group">
				<label asp-for="@Model.Account.Email">Email address</label>
				<input asp-for="@Model.Account.Email" type="email" class="form-control" placeholder="Enter Email">
			</div>
			<div class="form-group">
				<label asp-for="@Model.Account.Password">Password</label>
				<input asp-for="@Model.Account.Password" type="password" class="form-control" placeholder="Enter Password">
			</div>
			<div class="form-group">
				<label for="passwordVerification">Verify Password</label>
				<input name="passwordVerification" type="password" class="form-control" placeholder="Re-enter Password">
			</div>
			<div class="form-group">
				<label asp-for="@Model.Account.FirstName">First Name</label>
				<input asp-for="@Model.Account.FirstName" type="text" class="form-control" placeholder="Enter First Name">
			</div>
			<div class="form-group">
				<label asp-for="@Model.Account.LastName">Last Name</label>
				<input asp-for="@Model.Account.LastName" type="text" class="form-control" placeholder="Enter Last Name">
			</div>
			<button type="submit" class="btn btn-primary btn-submit-form">Submit</button>
		</form>
	</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

