@model LoginViewModel

@{ ViewData["Title"] = "Home"; }

<h1 class="text-center">Welcome to the Shoemaker-Lane library!</h1>
<div class="row">
	<div class="col-xs-4">
		<form asp-action="DirectLogin" method="post">
			<div class="login-verification-info">
				@foreach (string error in Model.LoginErrorInfo) {
					error.ToString();
				}
			</div>
			<div asp-validation-summary="All"></div>
			<div class="form-group">
				<label asp-for="@Model.LoginInfo.Email">Email address</label>
				<input asp-for="@Model.LoginInfo.Email" type="email" class="form-control" placeholder="Enter Email">
			</div>
			<div class="form-group">
				<label asp-for="@Model.LoginInfo.Password">Password</label>
				<input asp-for="@Model.LoginInfo.Password" type="password" class="form-control" placeholder="Enter Password">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>	
	<div class="col-xs-6">
		<div class="text-center">
			<form asp-action="CreateAccount" method="get" style="margin-top:70px;">
				<label>Not a Member?</label>
				<input type="submit" class="btn btn-lg" value="Create Account!" />
			</form>
		</div>		
	</div>
</div>