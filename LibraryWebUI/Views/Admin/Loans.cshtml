@model LoansViewModel

@{
    ViewData["Title"] = "Loans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Loans</h2>

<div style="font-size:100%;">
	@{
		foreach (CoreLibrary.Inventory.IBook book in Model.Books) {
			<hr style="border-top: 1px solid; margin-top: 50px; margin-bottom:50px;" />

			<div class="row">

				<div class="col-xs-2">
					<img src="@($"data:image/png;base64,{Convert.ToBase64String(book.ImageBytes)}")" class="img-responsive">
					<p style="margin-top:10px;" class="text-center">
						<span style="font-weight:bold;">Format: </span> <em>@book.Format</em> <br />
					</p>
				</div>

				<div class="col-xs-10">
					<h2>@book.Title</h2>
					<h4>By: @book.Author</h4>
					<div class="row">
						<div class="col-xs-9">
							<h6>
								<span style="font-weight:bold;">Length: </span> <em>@book.Length pages</em> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
								<span style="font-weight:bold;">Genre: </span> <em>@book.Genre</em>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
								<span style="font-weight:bold;">ID#: </span> <em>@book.LibraryID</em>
							</h6>
							<textarea readonly style="width:100%; overflow:hidden;" rows="4">@book.Description</textarea>
						</div>
					</div>

					<div class="row">
						<div class="col-xs-1">
							<form asp-action="ReturnBook" method="post" style="margin:0;padding:0;">
								<input hidden type="number" name="libraryID" value="@book.LibraryID" />
								<input type="submit" class="btn btn-link" value="Return" style="margin:0;padding:0;" />
							</form>
						</div>

					</div>
				</div>
			</div>

		}
	}
</div>
