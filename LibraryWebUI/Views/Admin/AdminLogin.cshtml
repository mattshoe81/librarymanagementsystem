@model LibraryWebUI.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Administrator Login";
}

<h2>Administrator Login</h2>

<form asp-action="AdminLogin" method="post">
	<div class="login-verification-info">
		@foreach (string error in Model.LoginErrorInfo) {
			error.ToString();

		}
	</div>
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="@Model.LoginInfo.Email">Email address</label>
		<input asp-for="@Model.LoginInfo.Email" type="email" class="form-control" placeholder="Enter Email">
	</div>
	<div class="form-group">
		<label asp-for="@Model.LoginInfo.Password">Password</label>
		<input asp-for="@Model.LoginInfo.Password" type="password" class="form-control" placeholder="Enter Password">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
